<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/soft_layout_background">

        <TextView
            android:id="@+id/tv_track_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trackID"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tv_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_track_id"
            android:text="trackName"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tv_track_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_track_name"
            android:text="tackTime"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tv_genre_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_track_time"
            android:text="genre_name"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tv_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_genre_name"
            android:text="artistName"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tv_artist_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_artist_name"
            android:text="artistId"
            android:textSize="16dp"
            />
    </RelativeLayout>


</RelativeLayout>